<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80mm"
    android:layout_centerVertical="true"
    >

    <com.hangzhou.sz.baser.recyclerview.ProgressWheel
        android:id="@+id/footer_loading_view"
        android:layout_width="40mm"
        android:layout_height="40mm"
        android:layout_centerInParent="true"
        app:matProg_barColor="@color/colorPrimary"
        app:matProg_barWidth="5mm"
        app:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/no_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30mm"
        android:textColor="#666666"
        android:layout_centerInParent="true"
        android:text="已经全部加载完毕"
        android:visibility="gone"/>

</RelativeLayout>